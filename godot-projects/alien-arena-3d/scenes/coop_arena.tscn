script/source = "extends Node3D

var p1_score: int = 0
var p2_score: int = 0
var total_kills: int = 0

@onready var p1_health_label = $UI/P1Health
@onready var p2_health_label = $UI/P2Health
@onready var wave_label = $UI/WaveLabel
@onready var kills_label = $UI/KillsLabel
@onready var player1 = $Player1
@onready var player2 = $Player2
@onready var wave_manager = $WaveManager

func _ready():
	player1.health_changed.connect(_on_p1_health_changed)
	player2.health_changed.connect(_on_p2_health_changed)
	player1.add_to_group(\"players\")
	player2.add_to_group(\"players\")

	wave_manager.wave_started.connect(_on_wave_started)
	wave_manager.wave_completed.connect(_on_wave_completed)
	wave_manager.all_waves_completed.connect(_on_all_waves_completed)

	update_ui()

	# Start waves after a short delay
	await get_tree().create_timer(2.0).timeout
	wave_manager.start_waves()

func _input(event):
	if Input.is_action_just_pressed(\"restart\"):
		get_tree().reload_current_scene()

func _on_p1_health_changed(new_health):
	update_ui()

func _on_p2_health_changed(new_health):
	update_ui()

func _on_wave_started(wave_num):
	update_ui()

func _on_wave_completed(wave_num):
	total_kills += wave_manager.waves_config[wave_num - 1].count
	update_ui()

func _on_all_waves_completed():
	wave_label.text = \"VICTORY!\"
	wave_label.modulate = Color(0, 1, 0)

func update_ui():
	if p1_health_label:
		p1_health_label.text = \"P1: \" + str(player1.health) + \" HP\"
	if p2_health_label:
		p2_health_label.text = \"P2: \" + str(player2.health) + \" HP\"
	if wave_label:
		var info = wave_manager.get_wave_info()
		wave_label.text = \"Wave \" + str(info.current) + \"/\" + str(info.total)
	if kills_label:
		kills_label.text = \"Kills: \" + str(total_kills)
"

